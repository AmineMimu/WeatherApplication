<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.weather.mydomain.weatherapplication.MainActivity">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="368dp"
        android:layout_height="495dp"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp"
        tools:ignore="MissingConstraints">

        <ListView
            android:id="@+id/townListView"
            android:layout_width="match_parent"
            android:layout_height="400dp"></ListView>

        <Button
            android:id="@+id/goToAddCity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add City"
            android:layout_below="@+id/townListView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:gravity="center_horizontal"
            android:onClick="addCity"
            />

    </RelativeLayout>
</android.support.constraint.ConstraintLayout>
